<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/playlist_item_size_height">

    <Button
        android:id="@+id/btnItemSinger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTransparent" />

    <ImageView
        android:id="@+id/imgItemSingerAvatar"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:focusable="false"
        android:src="@drawable/default_artist_grey"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/black_50"/>

    <TextView
        android:id="@+id/tvItemSingerName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:focusable="false"
        android:gravity="center_vertical"
        android:text="@string/notification_test_name_singer"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@id/imgItemSingerAvatar"
        app:layout_constraintLeft_toRightOf="@id/imgItemSingerAvatar"
        app:layout_constraintRight_toLeftOf="@id/imgItemSingerToRight"
        app:layout_constraintTop_toTopOf="@id/imgItemSingerAvatar" />

    <ImageView
        android:id="@+id/imgItemSingerToRight"
        android:layout_width="@dimen/item_artist_button_size"
        android:layout_height="@dimen/item_artist_button_size"
        android:layout_marginRight="15dp"
        android:src="@drawable/btn_more_left_arrow_nor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_50"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
